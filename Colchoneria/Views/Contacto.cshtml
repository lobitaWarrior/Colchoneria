
@{
    Layout = "~/Views/_Layout.cshtml";
}
@{ 

    var _response = Request["response"];
}
<script src="~/Scripts/waitingDialog.js"></script>
<div class="section">
    <div class="container">


        <div class="row main-low-margin">
            <div class="col-md-10 col-md-offset-1 col-sm-10 col-sm-offset-1">
                <h1><br /><br /></h1>
                <div id="divCentered">CONTACTENOS</div>
            </div>
        </div>


    </div>
</div>

<div class="container">
    <div class="row main-low-margin text-center">
        <div class="col-md-5 col-sm-5">
            <div class="circle-body"><i class="fa fa-info fa-5x  icon-set"></i></div>
            <h3>CONSULTAS </h3>
            <p>
                <b>Mail: </b> colchoneria@fibertel.com<br>
                <b>Wathsapp: </b>+5491165269727<br>
                <b>Tel.: </b> 4582-7417<br>
                <a href="https://www.facebook.com/demarmile/?fref=ts"><b>Facebook</b></a><br>
                <a href="#"><b>Mercadolibre</b></a><br>
                <i class="fa fa-credit-card-alt" aria-hidden="true"></i> Aceptamos tarjetas
            </p>
        </div>

        <div class="col-md-7 col-sm-7">
            <h3><i class="fa fa-envelope" aria-hidden="true"></i> MANDANOS UN MENSAJE</h3>
            <hr>
            <form id="mailform" method="post" action="~/Views/ProcessRequest.cshtml">
                <div class="row">
                    <div class="col-md-6 col-sm-6">
                        <div class="form-group">
                            <input type="text" name="Name" class="form-control" required="required" placeholder="Name">
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <div class="form-group">
                            <input type="text" name="EmailAdress" class="form-control" required="required" placeholder="Email address">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 col-sm-12">
                        <div class="form-group">
                            <input type="text" class="form-control" required="required" name="MessageText" placeholder="Message" />
                            @*<textarea name="message" id="MessageText" required="required" class="form-control" rows="7" placeholder="Message"></textarea>*@
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-raised btn-danger">Submit Request</button>
                        </div>
                    </div>
                </div>
            </form>
            <h4 style="color:#f55549;">@_response</h4>
        </div>
    </div>
</div>
<div class="space-bottom"></div>


<script>
    $('#mailform').submit(function (ev) {
        waitingDialog.show("Mandando Email");
    });
</script>