@{
    Layout = "~/Views/_Layout.cshtml";
}

<div class="carousel fade-carousel slide" data-ride="carousel" data-interval="4000" id="bs-carousel">
    <!-- Overlay -->
    <div class="overlay"></div>
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#bs-carousel" data-slide-to="0" class="active"></li>
        <li data-target="#bs-carousel" data-slide-to="1"></li>
        <li data-target="#bs-carousel" data-slide-to="2"></li>
        <li data-target="#bs-carousel" data-slide-to="3"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item slides active">
            <div class="slide-1"></div>
            <div class="hero">
                <hgroup>
                    <h1>Colchoneria Bekar</h1>
                </hgroup>
            </div>
        </div>
        <div class="item slides">
            <div class="slide-2"></div>
            <div class="hero">
                <hgroup>
                    <h1>Colchoneria Bekar</h1>
                </hgroup>
            </div>
        </div>
        <div class="item slides">
            <div class="slide-3"></div>
            <div class="hero">
                <hgroup>
                    <h1>Colchoneria Bekar</h1>
                    @*<h3>Get start your next awesome project</h3>*@
                </hgroup>
            </div>
        </div>
        <div class="item slides">
            <div class="slide-4"></div>
            <div class="hero">
                <hgroup>
                    <h1>Colchoneria Bekar</h1>
                </hgroup>
            </div>
        </div>
    </div>
</div>


<div class="space-bottom"></div>

<div class="container">

    <div class="card-deck">

        <div class="card" style="width: 20rem;">
            <img class="card-img-top" src="~/Imagenes/colchon-futon-negro-rojo.jpg" alt="imagen1">
            <div class="card-block">
                <h4 class="card-title">Colchones</h4>
                @*<div class="card-text">Ofrecemos variedades en colchones para su comodidad, vea nuestros colchones.</div>*@
                <a href="/Views/Productos#productosColchones" class="btn btn-raised btn-danger">Ver</a>
            </div>
        </div>
        <div class="card" style="width: 20rem;">
            <img class="card-img-top" src="~/Imagenes/alm.jpg" alt="imagen1">
            <div class="card-block">
                <h4 class="card-title">Almohadones</h4>
                @*<div class="card-text">Vea nuestros almohadones para su eleccion.</div>*@
                <a href="/Views/Productos#productosAlmohadones" class="btn btn-raised btn-danger">Ver</a>
            </div>
        </div>
        <div class="card" style="width: 20rem;">
            <img class="card-img-top" src="~/Imagenes/Telas/ecocuero_dibujado.jpg" alt="imagen1">
            <div class="card-block">
                <h4 class="card-title">Telas</h4>
                @*<div class="card-text">Muestrario de telas a su disposicion, consulte por otras.</div>*@
                <a href="/Views/Productos#productosTelas" class="btn btn-raised btn-danger">Ver</a>
            </div>
        </div>
    </div>

</div>
